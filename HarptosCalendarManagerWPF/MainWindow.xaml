<Window x:Class="HarptosCalendarManagerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarptosCalendarManagerWPF"
        mc:Ignorable="d"
		MinHeight="200"
		MinWidth="400"
        Title="MainWindow" Height="500" Width="400">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="File">
				<MenuItem Header="New Timeline"/>
				<MenuItem Header="Load Timeline"/>
				<MenuItem Header="Save"/>
				<MenuItem Header="Save As"/>
				<Separator />
				<MenuItem Header="Exit"/>
			</MenuItem>
			<MenuItem Header="Edit">

			</MenuItem>
			<MenuItem Header="Options">
				<MenuItem Header="Passed Notes Notification"/>
				<MenuItem Header="Small Daytracker"/>
				<MenuItem Header="Save"/>
				<MenuItem Header="Save As"/>
				<Separator />
				<MenuItem Header="Exit"/>
			</MenuItem>
		</Menu>
		<local:CampaignTree/>

	</DockPanel>
</Window>
